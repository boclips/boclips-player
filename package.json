{
  "name": "boclips-player",
  "description": "A framework agnostic player for serving Boclips videos",
  "license": "BSD-3-Clause",
  "author": "Boclips <engineering@boclips.com>",
  "contributors": [
    "Antony O'Neill <antony@boclips.com>"
  ],
  "homepage": "https://github.com/boclips/boclips-player#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boclips/boclips-player.git"
  },
  "bugs": {
    "url": "https://github.com/boclips/boclips-player/issues"
  },
  "version": "0.1.0",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "browser": "lib/index.js",
  "files": [
    "dist",
    "esm",
    "lib"
  ],
  "scripts": {
    "analyse": "webpack --config webpack-config/webpack.analyse.js",
    "audit": "audit-ci -m",
    "build": "./scripts/build.sh",
    "compile": "tsc -p tsconfig.all.json --noEmit",
    "demo:module": "./node_modules/.bin/webpack serve --config demo/module/webpack.config.js",
    "demo:module-authorized": "./node_modules/.bin/webpack serve --config demo/module-authorized/webpack.config.js",
    "demo:static": "./node_modules/.bin/webpack serve --config demo/static/webpack.config.js",
    "demo:static-several": "./node_modules/.bin/webpack serve --config demo/static-several/webpack.config.js",
    "demo:unpkg": "./node_modules/.bin/webpack serve --config demo/unpkg/webpack.config.js",
    "lint": "tslint -c tslint.json -p . && stylelint 'src/**/*.less'",
    "lint:fix": "prettier-package-json --write && tslint --fix -c tslint.json -p . && stylelint 'src/**/*.less' --fix",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "jest"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@types/url-template": "^2.0.28",
    "axios": "^0.21.1",
    "deepmerge": "^4.2.2",
    "hls.js": "^0.14.17",
    "is-plain-object": "^5.0.0",
    "iso8601-duration": "^1.3.0",
    "normalize.css": "^8.0.1",
    "plyr": "^3.6.3",
    "resize-detector": "0.3.0",
    "url-template": "^2.0.8",
    "uuid": "^8.3.2",
    "webpack-bundle-analyzer": "^4.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/jest": "^26.0.24",
    "@webpack-cli/serve": "^1.3.0",
    "audit-ci": "^3.1.1",
    "axios-logger": "^2.5.0",
    "axios-mock-adapter": "^1.19.0",
    "boclips-js-security": "^7.0.0",
    "chai": "^4.3.4",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^6.1.0",
    "eventemitter3": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^26.6.3",
    "less": "^4.1.1",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.4.1",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.1.3",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^4.2.3",
    "typescript-tslint-plugin": "^1.0.1",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^4.0.0-beta.3",
    "webpack-merge": "^5.7.3"
  }
}
