{
  "name": "boclips-player",
  "description": "A framework agnostic player for serving Boclips videos",
  "license": "BSD-3-Clause",
  "author": "Boclips <engineering@boclips.com>",
  "contributors": [
    "Antony O'Neill <antony@boclips.com>"
  ],
  "homepage": "https://github.com/boclips/boclips-player#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boclips/boclips-player.git"
  },
  "bugs": {
    "url": "https://github.com/boclips/boclips-player/issues"
  },
  "version": "0.1.0",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "browser": "dist/boclips-player.js",
  "files": [
    "dist",
    "esm",
    "lib"
  ],
  "scripts": {
    "audit": "audit-ci -m",
    "build": "./scripts/build.sh",
    "compile": "tsc -p tsconfig.all.json --noEmit",
    "demo:static": "./node_modules/.bin/webpack-dev-server --config demo/static/webpack.config.js",
    "demo:static-several": "./node_modules/.bin/webpack-dev-server --config demo/static-several/webpack.config.js",
    "lint": "tslint -c tslint.json -p .",
    "lint:fix": "prettier-package-json --write && npm run lint -- --fix",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "jest"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "axios": "^0.18.0",
    "deepmerge": "^3.2.0",
    "hls.js": "^0.12.4",
    "iso8601-duration": "^1.2.0",
    "plyr": "^3.5.4",
    "resize-detector": "^0.2.0",
    "urijs": "^1.19.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.12",
    "audit-ci": "^1.7.0",
    "axios-logger": "^1.0.0",
    "axios-mock-adapter": "^1.16.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^2.0.2",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.6.0",
    "prettier": "^1.17.0",
    "prettier-package-json": "^2.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5",
    "typescript-tslint-plugin": "^0.3.1",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  }
}
